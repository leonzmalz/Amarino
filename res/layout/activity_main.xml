<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnConectar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conectar" 
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnDesconectar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desconectar" 
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnLigar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ligar 1"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnDesligar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desligar 1"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnLigar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ligar 2" 
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btnDesligar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desligar 2"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>